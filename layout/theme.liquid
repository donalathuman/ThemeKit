<!doctype html>
<html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

  {% comment %}
  First, include theme styles as defined in Shopify theme customise options.
  In this case, we use CSS variables that can then be used with SCSS variables
  {% endcomment %}
  {% include 'theme-styles' %}

  <!-- Global styles -->
  {{ 'styles.css' | asset_url | stylesheet_tag }}

  <!-- Page-specific styles -->
  {% if template == 'index' %}
  {{ 'home.css' | asset_url | stylesheet_tag }}
  {% endif %}

  {% if template contains 'about' %}
  {{ 'about.css' | asset_url | stylesheet_tag }}
  {% endif %}

  {% if template contains 'collection' %}
  {{'collection.css' | asset_url | stylesheet_tag}}
  {% endif %}


  {{ content_for_header }} <!-- Header hook for plugins -->

</head>

<body>


  <!-- Header -->
  {% include 'header' %}


  <!-- Main content -->
  <main role="main">
    {{ content_for_layout }}
  </main>


  <!-- Footer -->
  {% include 'footer' %}

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:400,700" rel="stylesheet">

  <!-- Global styles -->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  {{ 'scripts.js' | asset_url | script_tag }}

  {% comment %}
  <!-- Cart on-page modification -->
  {% include 'ajaxify-cart' %}
  {% endcomment %}

</body>

</html>
